{
  "name": "dernek-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@dernek/web",
    "dev:mobile": "turbo run dev --filter=@dernek/mobile",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@dernek/web",
    "build:core": "turbo run build --filter=@dernek/core",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.5.3"
  },
  "packageManager": "npm@10.8.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
